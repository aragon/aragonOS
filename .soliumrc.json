{
    "extends": "solium:all",
    "plugins": ["security"],
    "rules": {
        "security/no-low-level-calls": "off",
        "security/no-inline-assembly": "off",
        "function-order": "off",
        "imports-on-top": 1,
        "variable-declarations": 1,
        "array-declarations": 1,
        "operator-whitespace": 1,
        "lbrace": 1,
        "mixedcase": 0,
        "camelcase": 1,
        "uppercase": 1,
        "no-empty-blocks": 1,
        "no-unused-vars": 1,
        "quotes": 1,
        "indentation": 1,
        "arg-overflow": ["error", 8],
        "whitespace": 1,
        "deprecated-suicide": 1,
        "pragma-on-top": 1
    }
}
